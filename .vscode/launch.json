{
  // Use IntelliSense to learn about possible attributes.
  // Hover to view descriptions of existing attributes.
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Run template scanner",
      "type": "coreclr",
      "request": "launch",
      "program": "${workspaceFolder}\\artifacts\\bin\\Microsoft.TemplateSearch.TemplateDiscovery\\Debug\\net8.0\\Microsoft.TemplateSearch.TemplateDiscovery.dll",
      "cwd": "${workspaceFolder}",
      "args": [
        "--basePath",
        "./templates",
        "--verbose",
        "--savePacks",
        "--diff",
        "true",
        "--test",
        "--allowPreviewPacks",
        "--diff-override-cache",
        "E:\\Code\\dotnet-templating\\templates\\SearchCache\\oldcache.json"
      ],
      "env": {
        "DOTNET_ROOT": "${workspaceFolder}\\.dotnet",
        "DOTNET_HOST_PATH": "${workspaceFolder}\\.dotnet\\dotnet.exe",
      },
      "windows": {
        "env": {
          "PATH": "${workspaceFolder}\\.dotnet;${env:PATH}"
        }
      },
      "linux": {
        "env": {
          "PATH": "${workspaceFolder}/.dotnet:${env:PATH}"
        }
      },
      "osx": {
        "env": {
          "PATH": "${workspaceFolder}/.dotnet:${env:PATH}"
        }
      }
    },
    {
      "name": "Attach",
      "type": "coreclr",
      "request": "attach"
    },
    {
      "name": "C#: Scanner Debug",
      "type": "dotnet",
      "request": "launch",
      "projectPath": "${workspaceFolder}/tools/Microsoft.TemplateSearch.TemplateDiscovery/Microsoft.TemplateSearch.TemplateDiscovery.csproj",
      "launchConfigurationId": "scan"
    }
  ]
}